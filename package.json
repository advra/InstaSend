{
  "name": "instasend",
  "version": "0.4.1",
  "description": "A web-powered instagram optimized for desktop experience",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "repository": "",
  "keywords": [
    "Simple",
    "Instagram",
    "Messages",
    "Desktop"
  ],
  "author": "Adrian D. Alonzo",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "productName": "InstaSend",
    "icon": "build/AppIcon.ico",
    "appId": "com.advra.instasend",
    "mac": {
      "target": ["dmg","zip"],
      "artifactName": "${productName}-${version}-${os}.${ext}"
    },
    "win": {
      "target": ["nsis", "zip", "portable"],
      "artifactName": "${productName}-${version}-${os}.${ext}"
    },
    "linux": {
      "target": ["AppImage"],
      "artifactName": "${productName}-${version}-${os}.${ext}"
    },
    "dmg": {
      "title": "${productName}-${version}",
      "contents": [
        {
          "x": 300,
          "y": 360
        },
        {
          "x": 490,
          "y": 360,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "electron-window-state": "^5.0.3",
    "jquery": "^3.2.1",
    "jsdom": "^9.12.0"
  }
}
